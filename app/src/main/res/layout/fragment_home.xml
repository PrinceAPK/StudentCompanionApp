<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <com.smarteist.autoimageslider.SliderLayout
               android:layout_width="match_parent"
               android:layout_height="250dp"
               android:id="@+id/slider"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="THE RC INSTITUTE STORY"
               android:layout_marginTop="36dp"
               android:textSize="@dimen/title_size"
               android:textColor="@color/orange"
               android:layout_gravity="center_horizontal"
               android:fontFamily="sans-serif-black"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/richard_carlos"
               android:layout_marginTop="@dimen/text_margin"
               android:layout_marginHorizontal="@dimen/text_margin"
               android:textSize="@dimen/text_size"
               android:textColor="#3f3b3b"
               android:layout_gravity="center_horizontal"
               android:fontFamily="sans-serif-light"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="36dp"
               android:background="#313131"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="36dp"
                   android:orientation="vertical"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/faculties"
                   android:layout_marginTop="@dimen/text_margin"
                   android:textSize="@dimen/title_size"
                   android:textColor="#FFFFFF"
                   android:layout_gravity="center_horizontal"
                   android:fontFamily="sans-serif-black"/>

               <com.google.android.material.card.MaterialCardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="16dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Technical Systems"
                           android:layout_marginTop="@dimen/text_margin"
                           android:layout_marginHorizontal="@dimen/text_margin"
                           android:textSize="@dimen/text_size"
                           android:layout_gravity="center_horizontal"
                           android:textColor="#3f3b3b"
                           android:layout_margin="8dp"
                           android:fontFamily="sans-serif-light"/>

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#000000"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Information Systems"
                           android:layout_marginTop="@dimen/text_margin"
                           android:layout_marginHorizontal="@dimen/text_margin"
                           android:textSize="@dimen/text_size"
                           android:layout_gravity="center_horizontal"
                           android:textColor="#3f3b3b"
                           android:layout_margin="8dp"
                           android:fontFamily="sans-serif-light"/>

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#000000"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Admin Sciences"
                           android:layout_marginTop="@dimen/text_margin"
                           android:layout_marginHorizontal="@dimen/text_margin"
                           android:textSize="@dimen/text_size"
                           android:layout_gravity="center_horizontal"
                           android:textColor="#3f3b3b"
                           android:layout_margin="8dp"
                           android:fontFamily="sans-serif-light"/>

                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="@dimen/text_margin">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="RC INSTITUTE CONTACT DETAILS"
                   android:layout_marginTop="36dp"
                   android:textSize="@dimen/title_size"
                   android:textColor="@color/orange"
                   android:layout_gravity="center_horizontal"
                   android:fontFamily="sans-serif-black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="RC INSTITUTE"
                   android:layout_marginTop="@dimen/text_margin"
                   android:layout_marginHorizontal="@dimen/text_margin"
                   android:textSize="@dimen/text_size"
                   android:textColor="#3f3b3b"

                   android:fontFamily="sans-serif-light"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Kiev, Jeansville"
                   android:layout_marginTop="@dimen/text_margin"
                   android:layout_marginHorizontal="@dimen/text_margin"
                   android:textSize="@dimen/text_size"
                   android:textColor="#3f3b3b"
                   android:fontFamily="sans-serif-light"/>

               <ImageView
                   android:id="@+id/map"
                   android:layout_width="wrap_content"
                   android:layout_height="230dp"
                   android:src="@drawable/map"/>

           </LinearLayout>

       </LinearLayout>

   </ScrollView>
</FrameLayout>